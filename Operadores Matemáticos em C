#include <stdio.h>
int main () {

/* Operadores Aritimeticos:
 
Soma (+)

Subtração (-)

Multiplicação (*)

Divisão (/)

*/

//Exemplo dos Operadores Aritimeticos :

int numero1 , numero2;
int soma, subtraçao, multiplicaçao, divisao;

//Obs Entrada e saida de dados para visualizacçao do codigo:
printf("Digite o priemiro numero \n");
scanf("%d" , &numero1);
printf("Digite o segundo numero \n");
scanf("%d" , &numero2);

soma = numero1 + numero2;

subtraçao = numero1 - numero2;

multiplicaçao = numero1 * numero2;

divisao = numero1 / numero2;

printf("O resultado da soma é : %d \n" , soma );
printf("O resultado da subtração é : %d \n" , subtraçao );
printf("O resultado da multiplicação é : %d \n" , multiplicaçao );
printf("O resultado da divisão é : %d \n" , divisao );

/* Operadores de Atribuição:

Atribuiçao Simples (=)

Atribuição com Soma (+=)

Atribuição com Subtração (-=)

Atribuição com Multiplicação (*=)

Atribuição com Divisão (/=)

*/

int resultado;

//Resultado = resultado 
resultado = 10;
printf ("O resultado é : %d \n" , resultado);

//Resultado = resultado + 10
resultado += 10;
printf ("O resultado é : %d \n" , resultado);

//Resultado = resultado - 10
resultado -= 10;
printf ("O resultado é : %d \n" , resultado);

//Resultado = resultado * 10
resultado *= 10;
printf ("O resultado é : %d \n" , resultado);

//Resultado = resultado / 10
resultado /= 10;
printf ("O resultado é : %d \n" , resultado);



/*Operadores de Incremento e Decremento:

Incremento (++)

Decremento (--)

Pré Incremento (a++)

Pré Discremento (a--)

Pós Incremento (++a)

Pós Discremento (--a)

*/
 int n1 = 1;
printf("O valor inicial é : %d \n", n1);

 n1 ++;
printf("O incremento é : %d \n" , n1);
//Adiciona +1 ao valor

//Obs O codigo segue a logica da ordem dos fatores. Ex: n1 = 1 --> n1 ++ = 2 --> n1 -- = 1 . 

n1 --;
printf("O Discremento é : %d \n" , n1);
//Subtrai -1 ao valor

int a = 5;
int resposta;

//Obs O codigo segue a logica da ordem dos fatores. Ex: n1 = 1 --> n1 ++ = 2 --> n1 -- = 1 .

resposta = a++;
printf("A resposta do Pre Incremento é : %d e agora %d \n", a ,resposta);
//O pré incremento mostra primeiro a soma e depois o valor original

resposta = ++a;
printf("A resposta do Pós Incremento é : %d e agora %d \n", a ,resposta);
//O pós incremento mostra o valor original e depois a soma

resposta = --a;
printf("A resposta do Pre Discremento é : %d e agora %d \n", a ,resposta);
//O pré discremento mostra a subtração e depois o valor original

resposta = a--;
printf("A resposta do Pós Discremento é : %d e agora %d \n", a ,resposta);
//O pós Discremento mostra o valor original e depois a subtração
 
    
}

